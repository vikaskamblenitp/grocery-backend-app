{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"rootDir": ".",
		"types": ["node", "express"],
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": false,
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": false,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"paths": {
			"#api": ["./src/api"],
			"#api/*": ["./src/api/*"],
			"#configs": ["./src/configs"],
			"#configs/*": ["./src/configs/*"],
			"#constants": ["./src/constants"],
			"#constants/*": ["./src/constants/*"],
			"#helpers": ["./src/helpers/"],
			"#helpers/*": ["./src/helpers/*"],
			"#middlewares": ["./src/middlewares/"],
			"#middlewares/*": ["./src/middlewares/*"],
			"#utils": ["./src/utils/"],
			"#utils/*": ["./src/utils/*"]
		}
	},
	"include": ["src/*.ts", "src/**/*.ts", "src/**/*.js", "lib/**/*.ts", "lib/**/*.js"],
	"exclude": ["node_modules", "<node_internals>/**", "dist"]
}
